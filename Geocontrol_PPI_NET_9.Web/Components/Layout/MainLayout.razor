@using Geocontrol_PPI_NET_9.Web.Components.Common
@using Geocontrol_PPI_NET_9.Web.Services
@inherits LayoutComponentBase

@inject AuthService authService

<div class="page">

    @if (authService.IsLoggedIn)
    {
        <div class="sidebar">
            <NavMenu />
        </div>
    }

    <main>
        @if (authService.IsLoggedIn)
        {
            <div class="banner-layout">
                <h1 class="navbar-brand">/GeoControl App</h1>
            </div>
        }

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>


<LoadingOverlay />

@code {
    protected override void OnInitialized()
    {
        authService.OnChange += AuthStateChanged;
    }

    private void AuthStateChanged()
    {
        try
        {
            StateHasChanged();
        }
        catch (Exception)
        {
            Console.WriteLine("NavMenu: Error actualizando el estado de autenticación.");
        }
    }
}